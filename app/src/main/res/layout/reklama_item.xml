<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <ImageView
        android:id="@+id/image_reklama"
        android:layout_width="150dp"
        android:layout_height="200dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/velo" />

    <TextView
        android:id="@+id/FirstText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_reklama"
        android:text="Sport Velo"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/margin_standart" />

    <TextView
        android:id="@+id/ReklamaText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/FirstText"
        app:layout_constraintStart_toStartOf="@id/FirstText"
        android:layout_marginTop="@dimen/margin_standart"
        android:text="Reklama"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/colorAccent"
        android:textSize="20dp"
        />

    <TextView
        android:id="@+id/textCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cost $405"
        app:layout_constraintTop_toBottomOf="@id/ReklamaText"
        app:layout_constraintStart_toStartOf="@id/ReklamaText"
        android:layout_marginTop="@dimen/margin_standart"
        android:textSize="@dimen/margin_standart"
        android:textColor="@color/colorPrimary"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/image_reklama"
        android:layout_marginStart="@dimen/margin_standart"
        app:layout_constraintTop_toBottomOf="@id/textCost"
        android:layout_marginTop="@dimen/margin_standart"
        android:text="Show more information"
        android:textColor="#020000"
        android:textSize="20dp"


        />


</androidx.constraintlayout.widget.ConstraintLayout>