<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/image_samaleyot"
        android:layout_width="match_parent"
        android:layout_height="0dp"

        android:src="@drawable/qwertyyy"
        app:layout_constraintTop_toTopOf="parent"

        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/image_samaleyot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="@dimen/margin_standart"
        android:text="Пассажирский самолёт (коммерческий самолёт, авиалайнер)
— самолёт, предназначенный и оборудованный для перевозки пассажиров и багажа.
В отличие от многоцелевых транспортных самолетов, пассажирские самолёты имеют
раздельные отсеки для перевозки людей и груза, или не имеют дополнительного
грузового отсека вовсе."
        android:textColor="#000000"
        android:textSize="@dimen/margin_standart"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>